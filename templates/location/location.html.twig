{# location.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Departements{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/ad.js') }}"></script>
{% endblock %}

{% block body %}
    <!DOCTYPE html>
    <html>
    <head>
        <title>Liste des départements</title>
    </head>
    <body>
    <h1>salut</h1>
    {{ form_start(form, {'attr': {'id': 'locationForm'}}) }}
    {{ form_row(form.departement, {'attr': {'id': 'departementSelect'}}) }}
    {{ form_row(form.villeSearch, {'attr': {'placeholder': 'Rechercher une ville'}}) }}
    {{ form_row(form.villeId, {'attr': {'placeholder': 'Id de la ville'}}) }}

    <button type="submit" id="rechercherVilles">Selectionnez</button>
    {{ form_end(form) }}

    <div id="villesSearchContainer">
        <div id="villesContainer">
            Liste des villes associées au département ICI
        </div>
   
    </div>
    </body>
    </html>
{% endblock %}
